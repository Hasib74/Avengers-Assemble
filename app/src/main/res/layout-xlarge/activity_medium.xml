<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    android:background="#961B1B"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    tools:context="com.example.hasib.a2dcomicspuzzlegame.EasyClass">

    <TextView
        android:id="@+id/txt"
        android:layout_width="180dp"
        android:layout_height="69dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/mediumtxt" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            android:id="@+id/card1"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"


            app:cardBackgroundColor="#FB1010"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="10dp"


            >


            <ImageView
                android:id="@+id/one"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/antman" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:id="@+id/card2"
            android:layout_width="300dp"
            android:layout_height="300dp"

            android:layout_alignParentRight="true"

            android:layout_marginRight="20dp"

            app:cardBackgroundColor="#FB1010"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"

            >


            <ImageView
                android:id="@+id/two"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/doctorstrange" />

            <ImageView
                android:id="@+id/lockm1"
                android:layout_width="176dp"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:src="@drawable/lock"
                android:visibility="visible" />


        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView

            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/card3"

            android:layout_below="@+id/card1"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="10dp"


            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#FB1010"
            app:cardElevation="10dp"
            android:layout_alignParentLeft="true"

            >


            <ImageView



                android:layout_gravity="center"
                android:src="@drawable/falson"
                android:id="@+id/three"
                android:layout_width="250dp"
                android:layout_height="250dp"
                />

            <ImageView
                android:id="@+id/lockm2"
                android:layout_width="176dp"
                android:layout_height="148dp"
                android:layout_gravity="center"
                android:src="@drawable/lock"
                android:visibility="visible" />


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:id="@+id/card4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignTop="@+id/card3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#FB1010"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp">


            <ImageView


                android:id="@+id/four"

                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"


                android:src="@drawable/vison" />

            <ImageView

                android:id="@+id/lockm3"
                android:layout_width="176dp"
                android:layout_height="148dp"
                android:layout_below="@+id/two"

                android:layout_gravity="center"

                android:src="@drawable/lock"

                android:visibility="visible" />


        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView

            android:layout_width="300dp"
            android:layout_height="300dp"

            android:id="@+id/card5"
            android:layout_below="@+id/card3"
            android:layout_marginLeft="20dp"

            android:layout_marginTop="10dp"

            app:cardCornerRadius="8dp"

            app:cardBackgroundColor="#FB1010"
            app:cardElevation="10dp"
            android:layout_alignParentLeft="true"

            >


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/five"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/warmasigin"
                />


            <ImageView
                android:visibility="visible"
                android:layout_gravity="center"
                android:id="@+id/lockm4"
                android:layout_width="176dp"
                android:layout_height="148dp"
                android:src="@drawable/lock"
                />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView

            android:layout_width="300dp"
            android:layout_height="300dp"

            android:id="@+id/card6"
            android:layout_below="@+id/card3"
            android:layout_marginRight="20dp"

            android:layout_marginTop="10dp"

            app:cardCornerRadius="8dp"

            app:cardBackgroundColor="#FB1010"
            app:cardElevation="10dp"
            android:layout_alignParentRight="true"

            >


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/six"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/winter_soldier"
                />


            <ImageView
                android:visibility="visible"
                android:layout_gravity="center"
                android:id="@+id/lockm5"
                android:layout_width="176dp"
                android:layout_height="148dp"
                android:src="@drawable/lock"
                />


        </android.support.v7.widget.CardView>




    </RelativeLayout>


</RelativeLayout>