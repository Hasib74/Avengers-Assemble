<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="#961B1B"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/easyrelative"
    android:gravity="center"

    tools:context="com.example.hasib.a2dcomicspuzzlegame.EasyClass"

    >
    <TextView
        android:id="@+id/txt"
        android:layout_width="166dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/easytext" />
    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:gravity="center">

            <android.support.v7.widget.CardView

                android:id="@+id/card1"
                android:layout_width="322dp"
                android:layout_height="287dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"


                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="10dp"


                >


                <ImageView
                    android:id="@+id/one"
                    android:layout_width="303dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/hawkeye" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card2"
                android:layout_width="316dp"
                android:layout_height="289dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"

                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"

                >


                <ImageView
                    android:id="@+id/two"
                    android:layout_width="257dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/halk"

                    />

                <ImageView
                    android:id="@+id/lockhaw1"


                    android:layout_width="174dp"
                    android:layout_height="177dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card3"
                android:layout_width="322dp"
                android:layout_height="272dp"
                android:layout_marginBottom="20dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/card1"

                android:layout_marginLeft="20dp"


                android:layout_marginTop="5dp"
                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"

                >


                <ImageView


                    android:id="@+id/three"
                    android:layout_width="281dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captainamrica" />

                <ImageView
                    android:id="@+id/lockcap2"
                    android:layout_width="149dp"
                    android:layout_height="156dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card4"
                android:layout_width="316dp"
                android:layout_height="278dp"
                android:layout_alignEnd="@+id/card2"
                android:layout_marginBottom="20dp"
                android:layout_alignTop="@+id/card3"
                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_alignRight="@+id/card2">


                <ImageView


                    android:id="@+id/four"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"


                    android:src="@drawable/ironman" />

                <ImageView

                    android:id="@+id/lockIron3"
                    android:layout_width="164dp"
                    android:layout_height="173dp"
                    android:layout_below="@+id/two"

                    android:layout_gravity="center"

                    android:src="@drawable/lock"

                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card5"
                android:layout_width="316dp"
                android:layout_height="278dp"

                android:layout_alignLeft="@+id/card1"

                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/card1"

                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">


                <ImageView
                    android:id="@+id/five"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:src="@drawable/thor" />

                <ImageView
                    android:id="@+id/lockthor4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card6"
                android:layout_width="316dp"
                android:layout_height="278dp"
                android:layout_alignParentRight="true"

                android:layout_below="@+id/card3"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"

                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                >


                <ImageView
                    android:id="@+id/six"
                    android:layout_width="281dp"
                    android:layout_height="230dp"
                    android:layout_gravity="center"
                    android:src="@drawable/black_widow" />

                <ImageView
                    android:id="@+id/lockblack5"
                    android:layout_width="164dp"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>










</RelativeLayout>