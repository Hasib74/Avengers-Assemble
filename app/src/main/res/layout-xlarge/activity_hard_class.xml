<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="#961B1B"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="center"
    tools:context="com.example.hasib.a2dcomicspuzzlegame.EasyClass"

    >

    <TextView

        android:id="@+id/txt"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/hardtxt"
        android:padding="10dp"
        android:textSize="35dp" />

    <ScrollView
        android:layout_centerHorizontal="true"
        android:id="@+id/scroll"
        android:layout_below="@+id/txt"
        android:layout_above="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/_40sdp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/card1"
                android:layout_marginLeft="20dp"
                android:padding="10dp"



                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"


                >


                <ImageView
                    android:id="@+id/one"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/supperman" />




            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView


                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/card2"

                android:layout_marginRight="20dp"

                app:cardCornerRadius="8dp"

                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"
                android:layout_alignParentRight="true"

                >


                <ImageView
                    android:id="@+id/two"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/blackpanther" />

                <ImageView
                    android:id="@+id/lockh1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />




            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView


                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/card3"

                android:layout_below="@+id/card1"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"


                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"
                android:layout_alignParentLeft="true"

                >


                <ImageView


                    android:id="@+id/three"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/quicksilver" />

                <ImageView
                    android:id="@+id/lockh2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card4"

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignTop="@+id/card3"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">


                <ImageView


                    android:id="@+id/four"

                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"


                    android:src="@drawable/scarlterwitch" />

                <ImageView

                    android:id="@+id/lockh3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_below="@+id/two"

                    android:layout_gravity="center"

                    android:src="@drawable/lock"

                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card5"

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/card3"

                android:layout_marginLeft="20dp"

                android:layout_marginTop="10dp"

                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"

                >


                <ImageView
                    android:id="@+id/five"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wasp" />


                <ImageView
                    android:id="@+id/lockh4"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:id="@+id/card6"

                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentBottom="true"

                android:layout_alignParentEnd="true"
                app:cardBackgroundColor="#FB1010"

                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                android:layout_alignParentRight="true">


                <ImageView
                    android:id="@+id/six"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/captin_marvel" />


                <ImageView
                    android:id="@+id/lockh5"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>




        </RelativeLayout>

    </ScrollView>


    <!--<RelativeLayout
        android:id="@+id/back"

        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true">


        <Button
            android:layout_width="58dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"

            android:background="@drawable/left"
            android:elevation="8dp" />

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/right"

            android:elevation="8dp" />

    </RelativeLayout>-->




</RelativeLayout>