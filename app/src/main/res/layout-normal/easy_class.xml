<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:background="#961B1B"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/easyrelative"
    android:gravity="center"

    tools:context="com.example.hasib.a2dcomicspuzzlegame.EasyClass"

    >

    <TextView
        android:id="@+id/txt"

        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/easytext" />

    <ScrollView
        android:layout_centerInParent="true"
        android:id="@+id/scroll"
        android:layout_below="@+id/txt"
        android:layout_above="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/card1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"


                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"


                >


                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/one"
                    android:src="@drawable/hawkeye"
                    android:layout_width="115dp"
                    android:layout_height="115dp"/>




            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/card2"

                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"

                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"
                android:layout_alignParentRight="true"

                >


                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/two"
                    android:src="@drawable/halk"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    />

                <ImageView
                    android:id="@+id/lockhaw1"


                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />




            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/card3"
                android:layout_below="@+id/card1"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"
                android:layout_alignParentLeft="true"
                >


                <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/captainamrica"
                    android:id="@+id/three"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    />

                <ImageView
                    android:id="@+id/lockcap2"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:id="@+id/card4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignLeft="@+id/card6"
                android:layout_alignStart="@+id/card6"
                android:layout_alignTop="@+id/card3"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="#FB1010"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp">


                <ImageView


                    android:id="@+id/four"

                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"


                    android:src="@drawable/ironman" />

                <ImageView

                    android:id="@+id/lockIron3"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_below="@+id/two"
                    android:layout_gravity="center"
                    android:src="@drawable/lock"
                    android:visibility="visible" />


            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/card5"
                android:layout_below="@+id/card3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"
                android:layout_alignParentLeft="true"

                >


                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/five"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:src="@drawable/thor"
                    />
                <ImageView
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:id="@+id/lockthor4"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:src="@drawable/lock"
                    />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView

                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/card6"
                android:layout_below="@+id/card3"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FB1010"
                app:cardElevation="10dp"
                android:layout_alignParentRight="true"

                >
                <ImageView

                    android:id="@+id/six"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/black_widow" />

                <ImageView
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:id="@+id/lockblack5"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:src="@drawable/lock" />


            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>





