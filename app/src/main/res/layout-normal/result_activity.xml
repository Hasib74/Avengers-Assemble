<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:orientation="vertical"
    android:weightSum="8"
    android:background="#961B1B"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_weight="4"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESULT"
            android:textColor="#ffff"
            android:textSize="28dp" />

    </LinearLayout>
    <LinearLayout

        android:id="@+id/easy_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="24dp"
                app:cardCornerRadius="20dp"
                android:layout_height="103dp"
                android:layout_weight="1"
                android:padding="5dp"
                app:cardElevation="15dp"
                android:background="#f5df1a"
                app:cardBackgroundColor="#e9c02222"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/first_Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"

                >

                <TextView
                    android:id="@+id/first_playername"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EASY"
                    android:textColor="#ffff" />
                <TextView
                    android:id="@+id/first_imagename"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SABBIR"
                    android:textColor="#ffff" />
                <TextView
                    android:id="@+id/first_score_time"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="02:10s"
                    android:textColor="#ffff" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/medium_Layout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="24dp"
            app:cardCornerRadius="20dp"
            android:layout_height="103dp"
            android:layout_weight="1"
            android:padding="10dp"

            app:cardElevation="15dp"
            android:background="#f5df1a"
            app:cardBackgroundColor="#e9c02222"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_margin="10dp"

                android:id="@+id/second_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/second_player_name"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EASY"
                android:textColor="#ffff" />
            <TextView
                android:id="@+id/second_imagename"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SABBIR"
                android:textColor="#ffff" />
            <TextView
                android:id="@+id/second_Time"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02:10s"
                android:textColor="#ffff" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:id="@+id/hard_Layout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="24dp"
            app:cardCornerRadius="20dp"
            android:layout_height="103dp"
            android:layout_weight="1"
            android:padding="10dp"

            app:cardElevation="15dp"
            android:background="#f5df1a"
            app:cardBackgroundColor="#e9c02222"
            android:layout_margin="10dp"
            >
            <ImageView
                android:layout_margin="10dp"
                android:id="@+id/thirt_Image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/thirt_player_name"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EASY"
                android:textColor="#ffff" />
            <TextView
                android:id="@+id/thirt_imagename"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SABBIR"
                android:textColor="#ffff" />
            <TextView
                android:id="@+id/thirt_time"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02:10s"
                android:textColor="#ffff" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>


</LinearLayout>